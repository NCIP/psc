<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
    <bean id="irViewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="viewClass">
            <value>org.springframework.web.servlet.view.InternalResourceView</value>
        </property>
        <property name="prefix">
            <value>/WEB-INF/views/</value>
        </property>
        <property name="suffix">
            <value>.jsp</value>
        </property>
    </bean>

    <bean name="/load/**" id="loadDataController" autowire="byName"
          class="edu.northwestern.bioinformatics.studycalendar.test.LoaderController">
        <property name="resourcePrefix"><value>/edu/northwestern/bioinformatics/studycalendar/test/data</value></property>
    </bean>
</beans>