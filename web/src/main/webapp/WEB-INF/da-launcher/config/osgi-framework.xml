<?xml version='1.0' encoding='utf-8'?>

<!-- Settings of the used OSGi Framework -->
<osgi-framework-settings>
	<!--
	Specifies the OSGi Framework to be used. Required attrubutes:
	name - The name of the OSGi Framework (supported values are: 'equinox' , 'felix', 'knopflerfish')
	version - The version of the Framework.
	It's important to note that based on this element DA-Launcher decides upon the OSGi Framework it should use to run the OSGi Environment and where to look for it's class files.
	If you specify the name 'equinox' and version '3.3.0' then the directory '/osgi-framework/equinox/3.3.0' should exist and contain the JAR files of Equinox. More details can be found
	in the '/osgi-framework/about.txt' file.
	-->
    <!-- <framework name="equinox" version="3.4.0" /> -->
     <framework name="felix" version="1.8.0" />
    <!--<framework name="knopflerfish" version="2.2.0" />-->

	<!-- Defines Framework specific properties that will be passed to the Framework when starting it. (e.g., 'felix.log.level', 'osgi.context.bootdelegation', etc.) -->
	<framework-properties>
		<property name="felix.log.level" value="0"/>
		<property name="org.knopflerfish.consoletelnet.port">7224</property>
		<property name="osgi.shell.telnet.port">7223</property>

        <!-- The com.sun packages to include are the ones that come with the JRE (taken from 1.5).
                Need to be more specific than just com.sun.* because some actual bundles (e.g., JAXB RI)
                are under com.sun -->
        <!-- net.sf.cglib is included because the Membrane needs to be able to create proxies in any OSGi bundle -->
        <!-- the globus, cryptix, bouncycastle, and claymoresystems entries are because of
             http://cagrid.org/display/knowledgebase/GSSAPI+-+Bad+Certificate+Error+Solution
             See also static-lib/globus-security-packages.rb -->
        <!-- org.hibernate.jdbc is because of
             http://opensource.atlassian.com/projects/hibernate/browse/HHH-3529
             and should be removeable after upgrading to hibernate 3.5 -->
        <property name="org.osgi.framework.bootdelegation">sun.*,com.sun.corba.*,com.sun.image.*,com.sun.imageio.*,com.sun.java.*,com.sun.naming.*,com.sun.security.*,net.sf.cglib.*,org.globus.common,org.globus.ftp,org.globus.ftp.*,org.globus.gram,org.globus.gram.*,org.globus.gsi,org.globus.gsi.*,org.globus.io.*,org.globus.mds,org.globus.mds.*,org.globus.myproxy,org.globus.rsl,org.globus.security.gridmap,org.globus.util,org.globus.util.*,org.gridforum.jgss,cryptix,cryptix.*,org.bouncycastle,org.bouncycastle.*,org.ietf.jgss,COM.claymoresystems.*,org.hibernate.jdbc</property>
        <!-- <property name="org.knopflerfish.framework.debug.classloader">true</property> -->
	</framework-properties>

</osgi-framework-settings>
