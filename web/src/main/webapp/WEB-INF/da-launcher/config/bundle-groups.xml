<bundle-groups>
	<!-- Application bundles which are automatically started -->
	<bundles-directory name="application-bundles">
		<directory-settings dir="${da-launcher:home}/bundles/application-bundles" />
		<common-settings install-order="3" start-order="3" auto-start-bundles="true" ignore-install-errors="false" ignore-start-errors="false" />
	</bundles-directory>
	
	<!-- Application dependencies which are for resolving only -->
	<bundles-directory name="application-libraries">
		<directory-settings dir="${da-launcher:home}/bundles/application-libraries" />
		<common-settings install-order="2" start-order="2" auto-start-bundles="false" ignore-install-errors="false" ignore-start-errors="false" />
	</bundles-directory>
	
	<!-- System-level bundles which are not automatically started -->
	<bundles-directory name="system-optional">
		<directory-settings dir="${da-launcher:home}/bundles/system-optional" />
		<common-settings install-order="1" start-order="1" auto-start-bundles="false" ignore-install-errors="false" ignore-start-errors="false" />
	</bundles-directory>
	
	<!-- System-level bundles which are automatically started -->
	<bundles-directory name="system-bundles">
		<directory-settings dir="${da-launcher:home}/bundles/system-bundles" />
		<common-settings install-order="1" start-order="1" auto-start-bundles="true" ignore-install-errors="false" ignore-start-errors="false" />
	</bundles-directory>
	<!--
	<bundles-directory name="osgi-incompliant-libraries">
		<directory-settings dir="${da-launcher:home}/bundles/osgi-incompliant-libraries" />
		<common-settings install-order="1" start-order="1" auto-start-bundles="true" ignore-install-errors="false" ignore-start-errors="false" />
		<bundle-generation handle="ALL" cache-dir="${da-launcher:home}/runtime/cache/generated-bundles/osgi-incompliant-libraries" />
	</bundles-directory>
	-->
</bundle-groups>
