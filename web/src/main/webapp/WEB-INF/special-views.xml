<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

    <!-- Redirect views -->
    <bean id="redirectToRoot" class="org.springframework.web.servlet.view.RedirectView">
        <property name="contextRelative" value="true"/>
        <property name="url" value="/"/>
    </bean>

    <bean id="redirectToLogin" class="org.springframework.web.servlet.view.RedirectView">
        <property name="contextRelative" value="true"/>
        <property name="url" value="/public/login"/>
    </bean>

    <bean id="redirectToStudyList" class="org.springframework.web.servlet.view.RedirectView">
        <property name="contextRelative" value="true"/>
        <property name="url" value="/pages/cal/studyList"/>
    </bean>

    <bean id="redirectToManageSites" class="org.springframework.web.servlet.view.RedirectView">
        <property name="contextRelative" value="true"/>
        <property name="url" value="/pages/admin/manage/sites"/>
    </bean>

    <bean id="redirectToManageHolidays" class="org.springframework.web.servlet.view.RedirectView">
        <property name="contextRelative" value="true"/>
        <property name="url" value="/pages/admin/manage/blackoutDates"/>
    </bean>

    <bean id="redirectToCalendarTemplate" class="org.springframework.web.servlet.view.RedirectView">
        <property name="contextRelative" value="true"/>
        <property name="url" value="/pages/cal/template"/>
    </bean>

    <bean id="redirectToManagePeriod" class="org.springframework.web.servlet.view.RedirectView">
        <property name="contextRelative" value="true"/>
        <property name="url" value="/pages/cal/managePeriodActivities"/>
    </bean>

    <bean id="redirectToEditPeriod" class="org.springframework.web.servlet.view.RedirectView">
        <property name="contextRelative" value="true"/>
        <property name="url" value="/pages/cal/editPeriod"/>
    </bean>

    <bean id="redirectToSchedule" class="org.springframework.web.servlet.view.RedirectView">
        <property name="contextRelative" value="true"/>
        <property name="url" value="/pages/subject"/>
    </bean>

    <bean id="redirectToDashboard" class="org.springframework.web.servlet.view.RedirectView">
        <property name="contextRelative" value="true"/>
        <property name="url" value="/pages/dashboard"/>
    </bean>

    <bean id="redirectToAdministration" class="org.springframework.web.servlet.view.RedirectView">
        <property name="contextRelative" value="true"/>
        <property name="url" value="/pages/admin"/>
    </bean>

    <bean id="redirectToActivities" class="org.springframework.web.servlet.view.RedirectView">
        <property name="contextRelative" value="true"/>
        <property name="url" value="/pages/activities"/>
    </bean>

    <bean id="redirectToUserList" class="org.springframework.web.servlet.view.RedirectView">
        <property name="contextRelative" value="true"/>
        <property name="url" value="/pages/admin/users"/>
    </bean>

    <bean id="redirectToTeamAdmin" class="org.springframework.web.servlet.view.RedirectView">
        <property name="contextRelative" value="true"/>
        <property name="url" value="/pages/admin/team"/>
    </bean>

    <bean id="redirectToTeamAdminByStudy" class="org.springframework.web.servlet.view.RedirectView">
        <property name="contextRelative" value="true"/>
        <property name="url" value="/pages/admin/team/study"/>
    </bean>
</beans>