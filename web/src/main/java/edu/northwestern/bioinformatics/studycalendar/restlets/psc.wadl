        <resource path="users">
            <doc>
                <html:p>
                    The list of users known to the system.  The returned user documents can be brief
                    (username, first &amp; last names, account expiration date) or full (the above,
                    plus roles and role scopes).  If requesting full user information, in a
                    deployment with many users, limiting the range using the "limit" and "offset"
                    parameters may improve performance.
                </html:p>
            </doc>
            <method name="GET">
                <doc>
                    <html:div class="roles">
                        Authorized to:
                        <html:ul>
                            <html:li>User Administrator</html:li>
                        </html:ul>
                    </html:div>
                </doc>
                <request>
                    <param style="query" name="q" type="xsd:string">
                        <doc>
                            If specified, only users whose username, first name, or last name
                            contain the value (case-sensitive, unfortunately) will be included.
                        </doc>
                    </param>
                    <param style="query" name="brief" type="xsd:boolean">
                        <doc>
                            If this parameter is "true" or omitted, only each user's first &amp;
                            last name, username, and expiration date (if any) will be included
                            in the response.  If "false", the users' roles and role scopes will
                            be included also.
                        </doc>
                    </param>
                    <param style="query" name="limit" type="xsd:integer">
                        <doc>
                            If specified, only this number of results will be returned.  Combine
                            with "offset" to paginate the list.
                        </doc>
                    </param>
                    <param style="query" name="offset" type="xsd:integer">
                        <doc>
                            If specified, the results starting with this value will be returned.
                            Combine with "limit" to paginate the list.
                        </doc>
                    </param>
                </request>
                <response>
                    <representation mediaType="application/json"/>
                </response>
            </method>
        </resource>

        <resource path="users/{username}/managed-schedules">
            <doc>
                <html:p>
                    A single schedule for all the subject schedules being managed by a particular
                    user. A user may see the schedules for herself or any of her colleagues, though
                    her colleagues' schedules will be limited to those where she has overlapping
                    study and site access.
                </html:p>
            </doc>
            <method name="GET">
                <doc>
                    <html:div class="roles">
                        Authorized to:
                        <html:ul>
                            <html:li>Study Subject Calendar Manager</html:li>
                            <html:li>Study Team Administrator</html:li>
                            <html:li>Data Reader</html:li>
                        </html:ul>
                    </html:div>
                </doc>
                <response>
                    <representation href="#subject-assignments-xml"/>
                    <representation mediaType="application/json"/>
                    <representation mediaType="text/calendar"/>
                </response>
            </method>
        </resource>

        <resource path="users/{username}/roles">
            <doc>
                <html:p>
                    A list of the roles for the specified user.  System adminstrator users
                    may see the roles for any user in the system; all other users may only
                    see their own roles.
                </html:p>
            </doc>
            <param style="template" name="username">
                <doc>
                    <html:p>The username of the user.</html:p>
                </doc>
            </param>
            <method name="GET">
                <doc>
                    <html:p>
                        Retrieve the list of roles for a user.
                    </html:p>
                    <html:div class="roles">
                        Authorized to:
                        <html:ul>
                            <html:li>User Administrator</html:li>
                            <html:li>System Administrator can see if the user has 'User Administrator' role</html:li>
                            <html:li>Any user can see their own roles</html:li>
                        </html:ul>
                    </html:div>
                </doc>
                <response>
                    <representation href="#roles-xml"/>
                </response>
            </method>
            <resource path="{rolename}">
                <doc>
                    <html:p>
                        The details of a particular role for a user.  As with the parent resource,
                        most users may only access the resource corresponding with their own
                        account.
                    </html:p>
                    <html:p>
                        The details for a role include the sites for which it is enabled for the
                        user (if it is a site-specific role).  For study- and site-specific roles,
                        the associated studies nest within the associated sites.
                    </html:p>
                </doc>
                <param style="template" name="rolename">
                    <doc>
                        <html:p>
                            The role for which details are being requested.
                        </html:p>
                    </doc>
                </param>
                <method name="GET">
                    <doc>
                        <html:p>
                            Returns the details of a particular role.
                        </html:p>
                        <html:p>
                            If the authenticated user is not permitted to see account information
                            for the requested username, it returns status 403.  If the authenticated
                            user is permitted to see account information, but the account doesn't
                            have the requested role, it returns 404.
                        </html:p>
                        <html:div class="roles">
                            Authorized to:
                            <html:ul>
                                <html:li>User Administrator</html:li>
                                <html:li>System Administrator can see if the user has 'User Administrator' role</html:li>
                                <html:li>Any user can see their own roles</html:li>
                            </html:ul>
                        </html:div>
                    </doc>
                    <response>
                        <representation href="#role-xml"/>
                    </response>
                </method>
            </resource>
            <resource path="subject-coordinator/schedules">
                <doc>
                    <html:em class="pending">Deprecated</html:em>
                    <html:p>
                        The schedule for all the patients belonging to a particular subject
                        coordinator user. Subject coordinator should able to see her own schedules
                        or for any of her colleagues.
                    </html:p>
                </doc>
                <method name="GET">
                    <doc>
                        <html:p>
                            Retrieve the full schedules for all subjects belonging to a particular subject coordinator.
                        </html:p>
                        <html:div class="roles">
                            Authorized to:
                            <html:ul>
                                <html:li>Study Subject Calendar Manager</html:li>
                                <html:li>Study Team Administrator</html:li>
                                <html:li>Data Reader</html:li>
                            </html:ul>
                        </html:div>
                    </doc>
                    <response>
                        <representation href="#subject-assignments-xml"/>
                        <representation mediaType="application/json"/>
                        <representation mediaType="text/calendar"/>
                    </response>
                </method>
            </resource>
        </resource>

        <resource path="provided-sites">
            <doc>
                <html:p>A list of sites from all enabled SiteProviders</html:p>
            </doc>
            <method name="GET">
                <doc>
                    <html:p>
                        Retrieve a list of sites from all enabled SiteProviders.
                    </html:p>
                    <html:div class="roles">
                        Authorized to:
                        <html:ul>
                            <html:li>Public</html:li>
                        </html:ul>
                    </html:div>
                </doc>
                <request>
                    <param style="query" name="q" type="xsd:string">
                        <doc>If specified, only sites which contain the query value (case-insensitive) in either their site name or their assigned identifier will be returned.</doc>
                    </param>
                </request>
                <response>
                    <representation href="#site-list-xml"/>
                </response>
            </method>
        </resource>

        <resource path="provided-studies">
            <doc>
                <html:p>A list of studies from all enabled StudyProviders</html:p>
            </doc>
            <method name="GET">
                <doc>
                    <html:p>
                        Retrieve a list of studies from all enabled SiteProviders.
                    </html:p>
                    <html:div class="roles">
                        Authorized to:
                        <html:ul>
                            <html:li>Study Calendar Template Builder</html:li>
                            <html:li>Data Reader</html:li>
                        </html:ul>
                    </html:div>
                </doc>
                <request>
                    <param style="query" name="q" type="xsd:string">
                        <doc>If specified, only studies which contain the query value (case-insensitive) in either their study title or their identifiers will be returned.</doc>
                    </param>
                </request>
                <response>
                    <representation href="#studies-xml"/>
                    <representation mediaType="application/json"/>
                </response>
            </method>
        </resource>

        <resource path="reports/scheduled-activities">
            <doc>
                <html:p>A list of scheduled activities for all the provided filters</html:p>
            </doc>
            <method name="GET">
                <doc>
                    <html:p>
                        Retrieve a list of scheduled activities that fit the criteria specified in the filters.
                        The filters are applied simultaneously -- i.e., only information about scheduled activities
                        that match all the filters will be returned.
                    </html:p>
                    <html:div class="roles">
                        Authorized to:
                        <html:ul>
                            <html:li>Study Subject Calendar Manager</html:li>
                            <html:li>Study Team Administrator</html:li>
                            <html:li>Data Reader</html:li>
                        </html:ul>
                    </html:div>
                </doc>
                <request>
                    <param style="query" name="study" type="xsd:string">
                        <doc>Limit to those scheduled activities derived from the study with the specified identifier.</doc>
                    </param>
                    <param style="query" name="site" type="xsd:string">
                        <doc>Limit to those scheduled activities for subjects participating at the site with the specified identifier.</doc>
                    </param>
                    <param style="query" name="state" type="xsd:string">
                        <doc>
                            Limit to those scheduled activities currently in the given state. This
                            parameter may be specified several times to include activities in
                            different states.
                        </doc>
                    </param>
                    <param style="query" name="activity-type" type="xsd:string">
                        <doc>
                            Limit to those scheduled activities whose activity type matches the
                            given value. This parameter may be specified several times to include
                            activities of several types.
                        </doc>
                    </param>
                    <param style="query" name="label" type="xsd:string">
                        <doc>Limit to those scheduled activities which have the given label.</doc>
                    </param>
                    <param style="query" name="start-date" type="xsd:string">
                        <doc>Limit to those scheduled activities whose current date is this date or later.</doc>
                    </param>
                    <param style="query" name="end-date" type="xsd:string">
                        <doc>Limit to those scheduled activities whose current date is this date or earlier.</doc>
                    </param>
                    <param style="query" name="responsible-user" type="xsd:string">
                        <doc>Limit to those scheduled activities whose subject assignment is being managed by the user with this username.</doc>
                    </param>
                    <param style="query" name="person-id" type="xsd:string">
                        <doc>Limit to activities for the given subject only.</doc>
                    </param>
                </request>
                <response>
                    <doc>A single JSON object describing the selected filters, along with the corresponding array of the properties of scheduled activities.</doc>
                    <representation mediaType="application/json"/>
                </response>
            </method>
        </resource>

        <resource path="osgi/bundles">
            <resource path="{bundle-id}">
                <doc>
                    <html:p>
                        The state of the given bundle in PSC's OSGi layer.
                    </html:p>
                </doc>
                <param style="template" name="bundle-id">
                    <doc>
                        The deployed ID for the bundle in question.
                        The <html:code>osgi/bundles</html:code>
                        resource may be used to look up these IDs.
                    </doc>
                </param>
                <method name="GET">
                    <doc>
                        <html:p>
                            A single JSON object describing the bundle with the given ID.
                        </html:p>
                        <html:div class="roles">
                            Authorized to:
                            <html:ul>
                                <html:li>System Administrator</html:li>
                            </html:ul>
                        </html:div>
                    </doc>
                    <response>
                        <representation mediaType="application/json"/>
                    </response>
                </method>
                <resource path="state">
                    <method name="GET">
                        <doc>
                            <html:p>
                                An object with the key <html:code>state</html:code>
                                and the value matching one of the six bundle
                                state constant names defined by the OSGi
                                <html:a href="http://www.osgi.org/javadoc/r4v41/org/osgi/framework/Bundle.html">Bundle interface</html:a>.
                            </html:p>
                            <html:div class="roles">
                                Authorized to:
                                <html:ul>
                                    <html:li>System Administrator</html:li>
                                </html:ul>
                            </html:div>
                        </doc>
                        <response>
                            <representation mediaType="application/json"/>
                        </response>
                    </method>
                    <method name="PUT">
                        <doc>
                            <html:p>
                                An object with the key <html:code>state</html:code>
                                and the value matching one of the six bundle
                                state constant names defined by the OSGi
                                <html:a href="http://www.osgi.org/javadoc/r4v41/org/osgi/framework/Bundle.html">Bundle interface</html:a>.
                            </html:p>
                            <html:p>
                                Only setting a bundle to
                                <html:code>STARTING</html:code> or
                                <html:code>STOPPING</html:code> is supported.
                            </html:p>
                            <html:div class="roles">
                                Authorized to:
                                <html:ul>
                                    <html:li>System Administrator</html:li>
                                </html:ul>
                            </html:div>
                        </doc>
                        <request>
                            <representation mediaType="application/json"/>
                        </request>
                    </method>
                </resource>
                <resource path="services/{service-identifier}/properties">
                    <param style="template" name="service-identifier">
                        <doc>
                            <html:p>
                                Either the service's numeric ID (i.e., the OSGi
                                <html:tt>service.id</html:tt> property) or its string PID
                                (i.e., <html:tt>service.pid</html:tt>).
                            </html:p>
                        </doc>
                    </param>
                    <method name="GET">
                        <doc>
                            <html:p>
                                An object representing the current properties
                                for this service.  Period-separated heirarchical keys
                                will result in nested objects.  E.g., properties like
                                this:
                            </html:p>
                            <html:ul>
                                <html:li>a.b.c =&gt; foo</html:li>
                                <html:li>a.b.d =&gt; bar</html:li>
                                <html:li>a.e =&gt; baz</html:li>
                            </html:ul>
                            <html:p>
                                Will result in a representation like this:
                            </html:p>
                            <html:blockquote>
                                { a: { b: { c: 'foo', d: 'bar' }, e: 'baz' }
                            </html:blockquote>
                            <html:div class="roles">
                                Authorized to:
                                <html:ul>
                                    <html:li>System Administrator</html:li>
                                </html:ul>
                            </html:div>
                        </doc>
                        <response>
                            <representation mediaType="application/json"/>
                        </response>
                    </method>
                    <method name="PUT">
                        <doc>
                            <html:p>
                                A representation of the desired state of the properties
                                for this service.  OSGi reserved properties (i.e.,
                                <html:tt>objectClass</html:tt>
                                and <html:tt>service.*</html:tt>) will be ignored and may
                                be omitted.  Period-separated hierarchical keys may be
                                represented by nested objects (as the are returned with GET)
                                or by flat keys.  If a flat key and a series of nested keys
                                collide, the behavior of the resource is undefined.
                            </html:p>
                            <html:p>
                                This method is only valid for services which are subject to the
                                configuration admin service (i.e., ones which export the
                                <html:tt>ManagedService</html:tt> interface).
                            </html:p>
                            <html:p>
                                The response is a representation of the properties after immediately
                                after the update is applied. OSGi services are not required to
                                expose all (or any) of the properties that have been set on them, so
                                this may not exactly reflect the input properties.  Also, since
                                property updates are asynchronous, it may not expose the new
                                values even if the service eventually will apply them.
                            </html:p>
                            <html:div class="roles">
                                Authorized to:
                                <html:ul>
                                    <html:li>System Administrator</html:li>
                                </html:ul>
                            </html:div>
                        </doc>
                        <request>
                            <representation mediaType="application/json"/>
                        </request>
                        <response>
                            <representation mediaType="application/json"/>
                        </response>
                    </method>
                </resource>
            </resource> <!-- bundles -->
            <method name="GET">
                <doc>
                    <html:p>
                        Returns an array of objects describing all the
                        installed bundles.
                    </html:p>
                    <html:div class="roles">
                        Authorized to:
                        <html:ul>
                            <html:li>System Administrator</html:li>
                        </html:ul>
                    </html:div>
                </doc>
                <response>
                    <representation mediaType="application/json"/>
                </response>
            </method>
        </resource>

      <resource path="user-actions">
          <doc>
              <html:p>
                  An action performed by a user in a certain context
                  which can be used to reference undoable changes.
              </html:p>
          </doc>

          <method name="POST">
             <doc>
                 <html:p>
                      Creates a user action.
                 </html:p>
                 <html:div class="roles">
                     Authorized to:
                     <html:ul>
                         <html:li>Public</html:li>
                     </html:ul>
                 </html:div>
              </doc>
              <request>
                  <representation mediaType="application/json"/>
                  <doc>
<html:pre class="example">
  {
    description: "Delayed 45 activities for Jo Carlson by 6 days",
    context: "{PSC}/api/v1/subjects/0000001/schedules",
    action_type: "Delay"
  }
</html:pre>
                  </doc>
              </request>
              <response>
                  <representation mediaType="application/json"/>
              </response>
          </method>
      </resource>

