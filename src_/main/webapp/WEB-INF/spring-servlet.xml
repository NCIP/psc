    <bean id="sectionTemplate" class="gov.nih.nci.cabig.ctms.web.chrome.Section"
          abstract="true">
        <property name="urlResolver">
            <ref bean="urlResolver"/>
        </property>
    </bean>

    <bean id="sectionInterceptor" class="gov.nih.nci.cabig.ctms.web.chrome.SectionInterceptor">
        <property name="sections">
            <list>
                <bean parent="sectionTemplate" >
                    <property name="displayName"><value>Calendars</value></property>
                    <property name="mainController"><value>studyListController</value></property>
                    <property name="pathMapping"><value>/cal/**</value></property>
                    <property name="tasks">
                        <list>
                            <bean class="gov.nih.nci.cabig.ctms.web.chrome.Task">
                                <property name="displayName"><value>Existing templates</value></property>
                                <property name="linkName"><value>studyListController</value></property>
                                <property name="urlResolver"><ref bean="urlResolver"/></property>
                            </bean>
                            <bean class="gov.nih.nci.cabig.ctms.web.chrome.Task">
                                <property name="displayName"><value>New template</value></property>
                                <property name="linkName"><value>newStudyController</value></property>
                                <property name="urlResolver"><ref bean="urlResolver"/></property>
                            </bean>
                        </list>
                    </property>                    
                </bean>
                <bean parent="sectionTemplate">
                    <property name="displayName"><value>Report</value></property>
                    <property name="mainController"><value>reportBuilderController</value></property>
                    <property name="pathMapping"><value>/report/**</value></property>
                    <property name="tasks">
                        <list>
