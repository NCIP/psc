                                <property name="displayName"><value>Report</value></property>
                                <property name="linkName"><value>reportBuilderController</value></property>
                                <property name="urlResolver"><ref bean="urlResolver"/></property>
                            </bean>
                        </list>
                    </property>
                </bean>
                <bean parent="sectionTemplate">
                    <property name="displayName"><value>Administration</value></property>
                    <property name="mainController"><value>administrationController</value></property>
                    <property name="pathMapping"><value>/admin/**</value></property>
                    <property name="tasks">
                        <list>
                            <bean class="gov.nih.nci.cabig.ctms.web.chrome.Task">
                                <property name="displayName"><value>Manage sites</value></property>
                                <property name="linkName"><value>manageSitesController</value></property>
                                <property name="urlResolver"><ref bean="urlResolver"/></property>
                            </bean>
                            <bean class="gov.nih.nci.cabig.ctms.web.chrome.Task">
                                <property name="displayName"><value>Manage users</value></property>
                                <property name="linkName"><value>listUsersController</value></property>
                                <property name="urlResolver"><ref bean="urlResolver"/></property>
                            </bean>
