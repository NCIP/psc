<?xml version="1.0" encoding="UTF-8"?>
<!--
    This applicationContext contains the definition of those commands
    that are not directly created by their controllers
-->

<beans 
    xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
    http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd"
    >
    <bean id="renameCommand" autowire="byName" scope="prototype"
        class="edu.northwestern.bioinformatics.studycalendar.web.template.RenameCommand"/>
    <bean id="addToTemplateCommand" autowire="byName" scope="prototype"
        class="edu.northwestern.bioinformatics.studycalendar.web.template.AddToCommand"/>
    <bean id="deleteCommand" autowire="byName" scope="prototype"
        class="edu.northwestern.bioinformatics.studycalendar.web.template.DeleteCommand"/>
    <bean id="moveCommand" autowire="byName" scope="prototype"
        class="edu.northwestern.bioinformatics.studycalendar.web.template.MoveCommand"/>


    <bean id="addToPeriodCommand" autowire="byName" scope="prototype"
        class="edu.northwestern.bioinformatics.studycalendar.web.template.period.AddToPeriodCommand"/>
    <bean id="deleteFromPeriodCommand" autowire="byName" scope="prototype"
        class="edu.northwestern.bioinformatics.studycalendar.web.template.period.DeleteFromPeriodCommand"/>
    <bean id="updatePeriodCommand" autowire="byName" scope="prototype"
        class="edu.northwestern.bioinformatics.studycalendar.web.template.period.UpdatePeriodCommand"/>
    <bean id="addLabelCommand" autowire="byName" scope="prototype"
        class="edu.northwestern.bioinformatics.studycalendar.web.template.period.AddLabelCommand"/>
    <bean id="moveEventCommand" autowire="byName" scope="prototype"
        class="edu.northwestern.bioinformatics.studycalendar.web.template.period.MovePlannedActivityCommand"/>

</beans>
