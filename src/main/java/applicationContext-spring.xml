<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<!--
    This applicationContext contains configuration for Spring itself
-->

<beans>
    <bean id="mainPropertyConfigurer" class="gov.nih.nci.cabig.ctms.tools.spring.PropertyPlaceholderConfigurer">
        <property name="properties">
            <bean class="gov.nih.nci.cabig.ctms.tools.DataSourceSelfDiscoveringPropertiesFactoryBean">
                <property name="databaseConfigurationName"><value>@config.database@</value></property>
                <property name="applicationDirectoryName"><value>@application-short-name@</value></property>
            </bean>
        </property>
        <property name="useNullForUnresolvablePlaceholders"><value>true</value></property>
    </bean>

    <bean class="org.springframework.beans.factory.annotation.RequiredAnnotationBeanPostProcessor"/>
</beans>
