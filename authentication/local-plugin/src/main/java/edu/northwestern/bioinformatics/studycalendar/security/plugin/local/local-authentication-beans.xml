<?xml version="1.0" encoding="UTF-8"?>

<!--
    Beans used by LocalAuthenticationSystem.
 -->

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
            http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
       ">
    <bean id="pscAuthenticationProvider"
         class="edu.northwestern.bioinformatics.studycalendar.security.plugin.local.PSCAuthenticationProvider">
        <property name="studyCalendarAuthenticationManager" ref="pscAuthenticationManager"/>
        <property name="userDetailsService" ref="pscUserDetailsService"/>
    </bean>

    <bean class="edu.northwestern.bioinformatics.studycalendar.security.plugin.local.StudyCalendarAuthenticationManager" id="pscAuthenticationManager">
        <property name="dataSource" ref="dataSource"/>
    </bean>
</beans>